@{
    ViewBag.Title = "Trang Chủ";
    var ListCount = (Dictionary<string, int>)Model;
}
<style>
    .css-Header {
        margin: 0px;
        font-weight: bold;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <p class="css-Header">QUẢN LÝ THIẾT BỊ</p>
            </header>
            <div class="panel-body">
                <div class="row state-overview">
                    <div class="col-md-4 zoom">
                        <a href="@Url.Action("Device", "Device")">
                            <section class="panel" style="min-height:0px;border: 1px solid #6ccac9">
                                <div class="symbol terques">
                                    <i class="icon-laptop"></i>
                                </div>
                                <div class="value">
                                    <h1 class="count">
                                        @ListCount["CountDevice"]
                                    </h1>
                                    <p>Tất Cả Các Thiết Bị</p>
                                </div>
                            </section>
                        </a>
                    </div>
                    <div class="col-md-4 zoom">
                        <a href="@Url.Action("Deviceliquidation", "Device")">
                            <section class="panel" style="min-height:0px;border: 1px solid #ff6c60">
                                <div class="symbol red">
                                    <i class="icon-trash"></i>
                                </div>
                                <div class="value">
                                    <h1 class="count">
                                        @ListCount["Deviceliquidation"]
                                    </h1>
                                    <p>Thiết Bị Đã Thanh Lý</p>
                                </div>
                            </section>
                        </a>
                    </div>
                    <div class="col-md-4 zoom">
                        <a href="@Url.Action("DeviceType", "DeviceType")">
                            <section class="panel" style="min-height:0px;border: 1px solid #f8d347">
                                <div class="symbol yellow">
                                    <i class="icon-list-alt"></i>
                                </div>
                                <div class="value">
                                    <h1 class="count">
                                        @ListCount["DeviceType"]
                                    </h1>
                                    <p>Quản Lý Loại Thiết Bị</p>
                                </div>
                            </section>
                        </a>
                    </div>
                </div>
                <div class="row state-overview">
                    <div class="col-md-4 zoom">
                        <a href="@Url.Action("Department", "Department")">
                            <section class="panel" style="min-height:0px;border: 1px solid #ff6c60">
                                <div class="symbol red">
                                    <i class="icon-briefcase"></i>
                                </div>
                                <div class="value">
                                    <h1 class="count">
                                        @ListCount["Project"]
                                    </h1>
                                    <p>Phòng Ban</p>
                                </div>
                            </section>
                        </a>
                    </div>
                    <div class="col-md-4 zoom">
                        <a href="@Url.Action("RequestDevice", "RequestDevice")">
                            <section class="panel" style="min-height:0px;border: 1px solid #f8d347">
                                <div class="symbol yellow">
                                    <i class="icon-inbox"></i>
                                </div>
                                <div class="value">
                                    <h1 class="count2">
                                        @ListCount["RequestDevice"]
                                    </h1>
                                    <p>Yêu Cầu Thiết Bị</p>
                                </div>
                            </section>
                        </a>
                    </div>
                    <div class="col-md-4 zoom">
                        <a href="@Url.Action("UserManagement", "Employees")">
                            <section class="panel" style="min-height:0px;border: 1px solid #6ccac9;">
                                <div class="symbol terques ">
                                    <i class="icon-group"></i>
                                </div>
                                <div class="value">
                                    <h1 class="count3">
                                        @ListCount["User"]
                                    </h1>
                                    <p>Danh Sách Nhân Viên</p>
                                </div>
                            </section>
                        </a>
                    </div>
                </div>
                <div class="row state-overview">
                    @*@if (Session["AuthenticationFeature"] != null && (Session["AuthenticationFeature"] as List<SystemFeature>).Any(k => k.ControllerName.Equals("Device") && k.ActionName.Equals("ScanerDevice")))
                    {*@
                    <div class="col-md-4 zoom">
                        <a href="@Url.Action("ScanerDevice", "Device")">
                            <section class="panel" style="min-height:0px;border: 1px solid burlywood">
                                <div class="symbol" style="background:beige;border-right: 1px solid burlywood;">
                                    <i class="icon-barcode" style="color:black"></i>
                                </div>
                                <div class="value">
                                    <p class="count" style="margin-top: 11px;font-size: large;">
                                        Quét Mã Vạch
                                    </p>
                                </div>
                            </section>
                        </a>
                    </div>
                    @*}*@
                    @*@if (Session["AuthenticationFeature"] != null && (Session["AuthenticationFeature"] as List<SystemFeature>).Any(k => k.ControllerName.Equals("Device") && k.ActionName.Equals("StatisticalDevice")))
                    {*@
                    <div class="col-md-4 zoom">
                        <a href="@Url.Action("StatisticalDevice", "Device")">
                            <section class="panel" style="min-height:0px;border: 1px solid #6ccac9">
                                <div class="symbol terques">
                                    <i class="icon-bar-chart"></i>
                                </div>
                                <div class="value">
                                    <p class="count" style="margin-top: 11px;font-size: large;">
                                        Thống Kê Thiết Bị
                                    </p>
                                </div>
                            </section>
                        </a>
                    </div>
                    @*}*@
                    @*@if (Session["AuthenticationFeature"] != null && (Session["AuthenticationFeature"] as List<SystemFeature>).Any(k => k.ControllerName.Equals("Project") && k.ActionName.Equals("StatisticProject")))
                    {*@
                    <div class="col-md-4 zoom">
                        <a href="@Url.Action("StatisticDepartment", "Department")">
                            <section class="panel" style="min-height:0px;border: 1px solid currentColor">
                                <div class="symbol" style="background:currentColor">
                                    <i class="icon-bar-chart"></i>
                                </div>
                                <div class="value">
                                    <p class="count" style="margin-top: 11px;font-size: large;">
                                        Thống Kê Phòng Ban
                                    </p>
                                </div>
                            </section>
                        </a>
                    </div>
                    @*}*@
                </div>
                <div class="col-md-6" style="display:block">
                    <!-- BAR CHART -->
                    <div class="card ">
                        <div class="card-header">
                            <h4 class="card-title">
                                <i class="far fa-chart-bar"></i>
                                Biểu đồ thể hiện tỉ lệ thiết bị theo trạng thái
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="chart">
                                <div id="piechart" style="width: 650px; height: 300px;"></div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- BAR CHART -->
                </div>
                <div class="col-md-6" style="display:block">
                    <div class="card ">
                        <div class="card-header">
                            <h4 class="card-title">
                                <i class="fa-chart-bar " id="randomValueBtn"></i>
                                Số lượng thiết bị đang sử dụng (Theo đơn vị)
                            </h4>
                        </div>
                        <div class="card-body">
                            <div id="Chart_Horizontal" style="width: 100%; height: 400px"></div>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </div>
</div>
<script>
    $('.Home').addClass('active');
</script>
<script type="text/javascript" src="~/Content/js/ChartJs/loader.js"></script>
<script type="text/javascript" src="~/Content/js/ChartJs/HomeChart.js"></script>
